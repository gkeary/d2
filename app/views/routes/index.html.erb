<h1>Listing routes</h1>

<table>
  <tr>
    <th>Routeid</th>
    <th>Routename</th>
    <th>Defaultdriverid</th>
    <th>Drivermessage</th>
    <th>Duser</th>
    <th>Terminal</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @routes.each do |route| %>
  <tr>
    <td><%= route.RouteID %></td>
    <td><%= route.RouteName %></td>
    <td><%= route.DefaultDriverID %></td>
    <td><%= route.DriverMessage %></td>
    <td><%= route.DUser %></td>
    <td><%= route.Terminal %></td>
    <td><%= link_to 'Show', route %></td>
    <td><%= link_to 'Edit', edit_route_path(route) %></td>
    <td><%= link_to 'Destroy', route, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

